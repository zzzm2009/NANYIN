<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/videoname_pre"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/list_text"
        android:text="视频名字" />

    <TextView
        android:id="@+id/videoname_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/videoname_pre"
        android:layout_alignBottom="@+id/videoname_pre"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/videoname_pre"
        android:layout_toRightOf="@+id/videoname_pre"
        android:textColor="@color/black"
        android:textSize="13sp" />



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/videoname_Tv"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/more" />

</RelativeLayout>